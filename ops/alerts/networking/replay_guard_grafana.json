{
  "title": "Replay Guard Drilldown",
  "schemaVersion": 39,
  "version": 1,
  "panels": [
    {
      "type": "timeseries",
      "title": "Replay drops (5m rate)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum by (instance, peer_class) (rate(network_replay_guard_drops_total[5m]))",
          "legendFormat": "{{instance}} ({{peer_class}})"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 200 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Replay window fill",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "options": {
        "reduceOptions": { "calcs": ["max"], "fields": "", "values": false },
        "orientation": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "textMode": "value"
      },
      "targets": [
        {
          "expr": "max by (peer_class) (network_replay_guard_window_fill_ratio)",
          "instant": true,
          "legendFormat": "{{peer_class}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "percentage",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.85 },
              { "color": "red", "value": 0.95 }
            ]
          }
        },
        "overrides": []
      }
    }
  ]
}
