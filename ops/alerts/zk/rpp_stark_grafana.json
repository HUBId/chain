{
  "title": "RPP-STARK Verifier Drilldown",
  "schemaVersion": 39,
  "version": 1,
  "panels": [
    {
      "type": "timeseries",
      "title": "Stage failures (10m rate)",
      "description": "Rate of verification failures grouped by stage, including adapter errors",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum by (stage) (rate(rpp_stark_stage_checks_total{proof_backend=\"rpp-stark\",result=\"fail\"}[10m]))",
          "legendFormat": "{{stage}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.1 },
              { "color": "red", "value": 0.3 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Consensus verifier p95 latency",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "options": {
        "orientation": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(rpp_stark_verify_duration_seconds_bucket{proof_backend=\"rpp-stark\",proof_kind=\"consensus\"}[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 2.5 },
              { "color": "red", "value": 3.2 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Stage latency p95 (per stage)",
      "description": "Rolling p95 verifier latency grouped by stage for the RPP-STARK backend",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(rpp_stark_verify_duration_seconds_bucket{proof_backend=\"rpp-stark\",stage!=\"\"}[5m])) by (le, stage))",
          "legendFormat": "{{stage}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1.0 },
              { "color": "red", "value": 1.6 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Throughput (proofs/sec)",
      "description": "Rate of successful verification events normalised by 5 stages per proof",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "options": {
        "orientation": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "targets": [
        {
          "expr": "sum(rate(rpp_stark_stage_checks_total{proof_backend=\"rpp-stark\",result=\"ok\"}[5m])) / 5",
          "legendFormat": "throughput"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 0.8 },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Failure ratio",
      "description": "Stage failure ratio across all proof kinds",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "options": {
        "orientation": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "targets": [
        {
          "expr": "increase(rpp_stark_stage_checks_total{proof_backend=\"rpp-stark\",result=\"fail\"}[15m]) / clamp_min(increase(rpp_stark_stage_checks_total{proof_backend=\"rpp-stark\"}[15m]), 1)",
          "legendFormat": "failure_ratio"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.02 },
              { "color": "red", "value": 0.05 }
            ]
          }
        },
        "overrides": []
      }
    }
  ]
}
