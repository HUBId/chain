{
  "title": "RPP-STARK Verifier Drilldown",
  "schemaVersion": 39,
  "version": 1,
  "panels": [
    {
      "type": "timeseries",
      "title": "Stage failures (10m rate)",
      "description": "Rate of verification failures grouped by stage, including adapter errors",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum by (stage) (rate(rpp_stark_stage_checks_total{proof_backend=\"rpp-stark\",result=\"fail\"}[10m]))",
          "legendFormat": "{{stage}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.1 },
              { "color": "red", "value": 0.3 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Consensus verifier p95 latency",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "options": {
        "orientation": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(rpp_stark_verify_duration_seconds_bucket{proof_backend=\"rpp-stark\",proof_kind=\"consensus\"}[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 2.5 },
              { "color": "red", "value": 3.2 }
            ]
          }
        },
        "overrides": []
      }
    }
  ]
}
