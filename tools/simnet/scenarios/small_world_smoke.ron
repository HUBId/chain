{
  "name": "small-world-smoke",
  "description": "Run the in-process small world topology harness",
  "duration_secs": 0,
  "env": {
    "RUST_LOG": "info"
  },
  "nodes": [
    {
      "label": "node-help",
      "program": "cargo",
      "args": ["run", "--quiet", "--package", "rpp-node", "--", "--help"],
      "startup_timeout_ms": 5000,
      "working_dir": "../.."
    }
  ],
  "wallets": [
    {
      "label": "wallet-help",
      "program": "cargo",
      "args": ["run", "--quiet", "--package", "rpp-wallet", "--", "--help"],
      "startup_timeout_ms": 5000,
      "working_dir": "../.."
    }
  ],
  "p2p": {
    "scenario_path": "../../scenarios/small_world_smoke.toml",
    "mode": "inprocess",
    "summary_path": "summaries/small_world_smoke.json"
  }
}
