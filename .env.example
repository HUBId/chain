# Copy this file to .env before running docker compose to seed the default
# configuration:
#   cp .env.example .env

# rpp-node configuration
RPP_NODE_RPC_ADDR=0.0.0.0
RPP_NODE_RPC_PORT=7070
RPP_NODE_METRICS_PORT=9797
RPP_NODE_LOG_LEVEL=info
RPP_NODE_CONFIG_PATH=/app/config/node.toml
RPP_NODE_CONFIG_HOST_PATH=./config/node.toml

# firewood fwdctl CLI container
FWDCTL_HEALTH_PORT=8081
FWDCTL_LOG_LEVEL=info
FWDCTL_DB_PATH=/home/fwdctl/data/firewood.db
FWDCTL_DB_DIR=/home/fwdctl/data

# simnet orchestrator
SIMNET_HEALTH_PORT=8090
SIMNET_HEALTH_ADDR=0.0.0.0:8090
SIMNET_SCENARIO=/simnet/scenarios/small_world_smoke.ron
SIMNET_ARTIFACTS_DIR=/simnet/artifacts
SIMNET_LOG_LEVEL=info
SIMNET_KEEP_ALIVE=true

# validator-ui static site
VALIDATOR_UI_PORT=8082
VALIDATOR_UI_ASSET_BASE_PATH=/
VALIDATOR_UI_API_BASE_URL=http://rpp-node:7070
