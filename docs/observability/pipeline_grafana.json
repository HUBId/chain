{
  "title": "Pipeline Observability",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Stage Duration (p95)",
      "description": "Pipeline stage latency at the 95th percentile, grouped by phase.",
      "gridPos": { "h": 9, "w": 24, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(rpp_node_pipeline_stage_latency_ms_bucket[5m])) by (phase, le))",
          "legendFormat": "{{phase}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Stage Observations (5m rate)",
      "description": "Rate of pipeline stage observations grouped by phase.",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 9 },
      "targets": [
        {
          "expr": "sum by (phase)(rate(rpp_node_pipeline_stage_total[5m]))",
          "legendFormat": "{{phase}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Storage Commit Height",
      "description": "Latest Firewood commit height recorded when the storage stage completes.",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 9 },
      "targets": [
        {
          "expr": "max(rpp_node_pipeline_commit_height{phase=\"storage\"})",
          "legendFormat": "Storage commit height"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Leader Rotations",
      "description": "Observed leader rotation events from the pipeline.",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 17 },
      "targets": [
        {
          "expr": "sum(increase(pipeline_leader_rotations_total[5m]))",
          "legendFormat": "Leader rotations"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Snapshot Verify Failure Rate (30m)",
      "description": "Failure ratio for snapshot verification runs over the last 30 minutes.",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 17 },
      "targets": [
        {
          "expr": "sum(increase(snapshot_verify_results_total{result=\"failure\"}[30m])) / sum(increase(snapshot_verify_results_total[30m]))",
          "legendFormat": "Failure rate"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "thresholds": {
        "mode": "absolute",
        "steps": [
          { "color": "green", "value": null },
          { "color": "orange", "value": 0.1 },
          { "color": "red", "value": 0.25 }
        ]
      }
    },
    {
      "type": "timeseries",
      "title": "Snapshot Verify Failures by Error (30m)",
      "description": "Per-error breakdown of snapshot verification failures over the last 30 minutes.",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 25 },
      "targets": [
        {
          "expr": "sum by (error)(increase(snapshot_verify_results_total{result=\"failure\"}[30m]))",
          "legendFormat": "{{error}}"
        }
      ]
    }
  ]
}
