{
  "title": "Pipeline Observability",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Stage Duration (p95)",
      "description": "Pipeline stage latency at the 95th percentile, grouped by phase.",
      "gridPos": { "h": 9, "w": 24, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(rpp_node_pipeline_stage_latency_ms_bucket[5m])) by (phase, le))",
          "legendFormat": "{{phase}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Stage Observations (5m rate)",
      "description": "Rate of pipeline stage observations grouped by phase.",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 9 },
      "targets": [
        {
          "expr": "sum by (phase)(rate(rpp_node_pipeline_stage_total[5m]))",
          "legendFormat": "{{phase}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Storage Commit Height",
      "description": "Latest Firewood commit height recorded when the storage stage completes.",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 9 },
      "targets": [
        {
          "expr": "max(rpp_node_pipeline_commit_height{phase=\"storage\"})",
          "legendFormat": "Storage commit height"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Leader Rotations",
      "description": "Observed leader rotation events from the pipeline.",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 17 },
      "targets": [
        {
          "expr": "sum(increase(pipeline_leader_rotations_total[5m]))",
          "legendFormat": "Leader rotations"
        }
      ]
    }
  ]
}
