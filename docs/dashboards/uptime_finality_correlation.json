{
  "title": "Uptime & Finality Correlation",
  "uid": "uptime-finality-correlation",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "timezone": "browser",
  "time": {
    "from": "now-12h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "environment",
        "label": "Environment",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "refresh": 2,
        "definition": "label_values(up, environment)",
        "query": { "query": "label_values(up, environment)", "refId": "PromVar" },
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "current": { "selected": true, "text": "All", "value": ["$__all"] }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Restart Signals",
      "description": "Tracks process start time changes and scrape uptime drops to highlight restarts that may precede finality regressions.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (environment) (changes(process_start_time_seconds{environment=~\"$environment\"}[5m]))",
          "legendFormat": "{{environment}} restarts"
        },
        {
          "refId": "B",
          "expr": "sum by (environment) (1 - up{job=~\"rpp-node|node\", environment=~\"$environment\"})",
          "legendFormat": "{{environment}} scrape downtime"
        }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Finality Lag & Height Gap",
      "description": "Correlates restart windows with finality lag (slots) and finalized height gap to show post-restart recovery.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "max_over_time(finality_lag_slots{environment=~\"$environment\"}[5m])",
          "legendFormat": "{{environment}} finality lag (slots)"
        },
        {
          "refId": "B",
          "expr": "max_over_time(finalized_height_gap{environment=~\"$environment\"}[5m])",
          "legendFormat": "{{environment}} finalized height gap"
        }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Block Progress During Recovery",
      "description": "Shows block production rate during restart windows to confirm chain height continues advancing while finality catches up.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
      "fieldConfig": {
        "defaults": {
          "unit": "blocks/min",
          "min": 0
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "increase(chain_block_height{environment=~\"$environment\"}[5m]) / 5",
          "legendFormat": "{{environment}} block rate"
        },
        {
          "refId": "B",
          "expr": "consensus:block_height_delta:5m{environment=~\"$environment\"} / 5",
          "legendFormat": "{{environment}} recorded block delta"
        }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "RPC Availability",
      "description": "Tracks RPC success ratio so operators can distinguish API outages from consensus stalls.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 24 },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "rpc:availability_ratio:5m{environment=~\"$environment\"}",
          "legendFormat": "{{environment}} RPC success ratio"
        }
      ]
    }
  ]
}
