{
  "title": "Uptime & Finality Correlation",
  "uid": "uptime-finality-correlation",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "timezone": "browser",
  "time": {
    "from": "now-12h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Restart Signals",
      "description": "Tracks process start time changes and scrape uptime drops to highlight restarts that may precede finality regressions.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(changes(process_start_time_seconds[5m]))",
          "legendFormat": "Process restarts"
        },
        {
          "refId": "B",
          "expr": "sum(1 - up{job=~\"rpp-node|node\"})",
          "legendFormat": "Scrape downtime"
        }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Finality Lag & Height Gap",
      "description": "Correlates restart windows with finality lag (slots) and finalized height gap to show post-restart recovery.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "max_over_time(finality_lag_slots[5m])",
          "legendFormat": "Finality lag (slots)"
        },
        {
          "refId": "B",
          "expr": "max_over_time(finalized_height_gap[5m])",
          "legendFormat": "Finalized height gap"
        }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Block Progress During Recovery",
      "description": "Shows block production rate during restart windows to confirm chain height continues advancing while finality catches up.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
      "fieldConfig": {
        "defaults": {
          "unit": "blocks/min",
          "min": 0
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "increase(chain_block_height[5m]) / 5",
          "legendFormat": "Block rate"
        },
        {
          "refId": "B",
          "expr": "consensus:block_height_delta:5m / 5",
          "legendFormat": "Recorded block delta"
        }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "RPC Availability",
      "description": "Tracks RPC success ratio so operators can distinguish API outages from consensus stalls.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 24 },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "rpc:availability_ratio:5m",
          "legendFormat": "RPC success ratio"
        }
      ]
    }
  ]
}
