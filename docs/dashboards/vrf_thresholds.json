{
  "title": "VRF Thresholds",
  "uid": "vrf-thresholds",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "timezone": "browser",
  "time": {
    "from": "now-12h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Current Threshold Ratio",
      "description": "Latest published VRF threshold ratio sampled from OTLP metrics.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "decimals": 2
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "max(rpp_crypto_vrf_selection_threshold_ratio)",
          "legendFormat": "Threshold Ratio"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal"
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Latest Threshold Value",
      "description": "Numerical VRF threshold value advertised for the active epoch.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 5, "w": 6, "x": 6, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "none"
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "max(rpp_crypto_vrf_selection_threshold_transitions)",
          "legendFormat": "Threshold Value"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal"
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Threshold Ratio Timeline",
      "description": "Track the VRF threshold ratio and fallback rate to spot curve adjustments.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "custom": {
            "drawStyle": "line",
            "showPoints": "auto"
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Fallback Rate" },
            "properties": [
              { "id": "unit", "value": "ops" },
              { "id": "custom.axisPlacement", "value": "right" }
            ]
          }
        ]
      },
      "targets": [
        {
          "refId": "A",
          "expr": "avg(rpp_crypto_vrf_selection_threshold_ratio)",
          "legendFormat": "Threshold Ratio"
        },
        {
          "refId": "B",
          "expr": "sum(rate(rpp_crypto_vrf_selection_fallback_total[5m]))",
          "legendFormat": "Fallback Rate"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Threshold Transitions",
      "description": "Epoch transitions publishing a new VRF threshold value.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 5 },
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 60,
            "showPoints": "never"
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(rpp_crypto_vrf_selection_threshold_transitions[5m])) by (threshold)",
          "legendFormat": "{{threshold}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 5,
      "type": "table",
      "title": "Recent Threshold Announcements",
      "description": "Tabular view of the latest threshold transitions with epoch context.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 14 },
      "fieldConfig": {
        "defaults": {
          "unit": "none"
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, rpp_crypto_vrf_selection_threshold_transitions)",
          "format": "table"
        }
      ],
      "options": {
        "showHeader": true
      }
    }
  ]
}
