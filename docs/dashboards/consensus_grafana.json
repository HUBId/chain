{
  "title": "Consensus Proof Validation",
  "uid": "consensus-proof-validation",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "timezone": "browser",
  "time": { "from": "now-6h", "to": "now" },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "VRF verification latency (p95)",
      "description": "Monitors the 95th percentile VRF verification latency grouped by success/failure.",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "showPoints": "auto",
            "axisPlacement": "auto"
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum by (le,result)(rate(consensus_vrf_verification_time_ms_bucket[5m])))",
          "legendFormat": "{{result}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right"
        }
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Quorum verification failures (5m)",
      "description": "Shows the number of failed quorum verifications over the last five minutes.",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 12, "x": 12, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(consensus_quorum_verifications_total{result=\"failure\"}[5m]))"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "colorMode": "thresholds",
        "graphMode": "area",
        "justifyMode": "center"
      }
    },
    {
      "id": 3,
      "type": "table",
      "title": "Failure reasons",
      "description": "Breaks down quorum verification failures by reason label.",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "center"
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(consensus_quorum_verifications_total{result=\"failure\"}[30m])) by (reason)",
          "format": "table"
        }
      ],
      "options": {
        "showHeader": true
      }
    }
  ]
}
