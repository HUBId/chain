{
  "title": "VRF Overview",
  "uid": "vrf-overview",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "timezone": "browser",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Pool Health",
      "description": "Validator pool size, unique participants, and participation rate per round.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "showPoints": "auto",
            "axisPlacement": "auto"
          },
          "unit": "short"
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Participation Rate" },
            "properties": [
              { "id": "unit", "value": "percentunit" },
              { "id": "custom.axisPlacement", "value": "right" }
            ]
          }
        ]
      },
      "targets": [
        {
          "refId": "A",
          "expr": "avg(rpp_crypto_vrf_selection_pool_entries)",
          "legendFormat": "Pool Entries"
        },
        {
          "refId": "B",
          "expr": "avg(rpp_crypto_vrf_selection_unique_addresses)",
          "legendFormat": "Unique Addresses"
        },
        {
          "refId": "C",
          "expr": "avg(rpp_crypto_vrf_selection_participation_rate)",
          "legendFormat": "Participation Rate"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right"
        }
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Accepted vs Rejected Submissions",
      "description": "Stacked acceptance and rejection rates derived from VRF selection counters.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "stepAfter",
            "fillOpacity": 80,
            "stacking": {
              "mode": "normal"
            }
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(rpp_crypto_vrf_selection_accepted_total[5m]))",
          "legendFormat": "Accepted"
        },
        {
          "refId": "B",
          "expr": "sum(rate(rpp_crypto_vrf_selection_rejected_total[5m]))",
          "legendFormat": "Rejected"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Success Rate vs Target Committee",
      "description": "Compare VRF success ratio with the configured committee target.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "custom": {
            "drawStyle": "line",
            "showPoints": "never",
            "axisPlacement": "left"
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Target Committee" },
            "properties": [
              { "id": "unit", "value": "short" },
              { "id": "custom.axisPlacement", "value": "right" }
            ]
          }
        ]
      },
      "targets": [
        {
          "refId": "A",
          "expr": "avg(rpp_crypto_vrf_selection_success_rate)",
          "legendFormat": "Success Rate"
        },
        {
          "refId": "B",
          "expr": "avg(rpp_crypto_vrf_selection_target_validator_count)",
          "legendFormat": "Target Committee"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right"
        }
      }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Fallback Reliance",
      "description": "Rate of rounds requiring a fallback candidate and the latest epoch context.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "bars",
            "lineInterpolation": "linear",
            "showPoints": "never",
            "barAlignment": 0,
            "fillOpacity": 60
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Latest Epoch" },
            "properties": [
              { "id": "unit", "value": "none" },
              { "id": "custom.axisPlacement", "value": "right" }
            ]
          }
        ]
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(rpp_crypto_vrf_selection_fallback_total[5m]))",
          "legendFormat": "Fallback Rate"
        },
        {
          "refId": "B",
          "expr": "max(rpp_crypto_vrf_selection_latest_epoch)",
          "legendFormat": "Latest Epoch"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 5,
      "type": "table",
      "title": "Rejection Reasons",
      "description": "Breakdown of rejection reasons over a five-minute window.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(rpp_crypto_vrf_selection_rejection_reason_total[5m])) by (reason)",
          "format": "table"
        }
      ],
      "options": {
        "showHeader": true
      }
    }
  ]
}
