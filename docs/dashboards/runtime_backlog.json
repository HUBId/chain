{
  "title": "Runtime Backlog",
  "description": "Tracks block proposal and transaction backlog levels for probe and alert tuning.",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Block backlog (avg over 5m)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "rate(rpp_runtime_backlog_blocks_sum[5m]) / rate(rpp_runtime_backlog_blocks_count[5m])",
          "legendFormat": "blocks",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {"values": false, "calcs": ["lastNotNull"], "fields": ""},
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "red", "value": 16}
            ]
          },
          "unit": "none"
        },
        "overrides": []
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Transaction backlog (avg over 5m)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "rate(rpp_runtime_backlog_transactions_sum[5m]) / rate(rpp_runtime_backlog_transactions_count[5m])",
          "legendFormat": "transactions",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {"values": false, "calcs": ["lastNotNull"], "fields": ""},
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "red", "value": 4096}
            ]
          },
          "unit": "none"
        },
        "overrides": []
      }
    }
  ]
}
