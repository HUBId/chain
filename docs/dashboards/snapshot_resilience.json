{
  "title": "Snapshot Resilience",
  "uid": "snapshot-resilience",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "1m",
  "timezone": "browser",
  "time": {
    "from": "now-14d",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Chaos Runs (7d)",
      "description": "Number of snapshot chaos drills executed over the last 7 days.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "increase(snapshot_chaos_runs_total[7d])",
          "format": "time_series"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal"
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Chaos Failures (7d)",
      "description": "Snapshot chaos drills that breached resume or retry thresholds over the last 7 days.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "increase(snapshot_chaos_failures_total[7d])",
          "format": "time_series"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal"
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Chaos Run Trend",
      "description": "Daily execution volume for snapshot chaos drills.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 6 },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "custom": {
            "drawStyle": "line",
            "showPoints": "auto"
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "increase(snapshot_chaos_runs_total[1d])",
          "legendFormat": "Runs/24h"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Chaos Failure Trend",
      "description": "Daily failure counts for snapshot chaos drills.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 6 },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "custom": {
            "drawStyle": "line",
            "showPoints": "auto"
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "increase(snapshot_chaos_failures_total[1d])",
          "legendFormat": "Failures/24h"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 5,
      "type": "stat",
      "title": "Resume Success Rate (6h)",
      "description": "Percentage of snapshot resume attempts that succeeded in the last 6 hours.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 15 },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 0.95 },
              { "color": "green", "value": 0.99 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(snapshot_resume_events_total{result=\"success\"}[6h])) / clamp_min(sum(rate(snapshot_resume_events_total{result=~\"success|failure\"}[6h])), 0.0001)",
          "format": "time_series"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal"
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Resume Attempts vs Failures",
      "description": "Resume attempts, successes, and failures over the last 24 hours.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 9, "w": 18, "x": 6, "y": 15 },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "custom": { "drawStyle": "line", "showPoints": "auto" }
        },
        "overrides": []
      },
      "targets": [
        { "refId": "A", "expr": "sum by (result)(increase(snapshot_resume_events_total[24h]))" }
      ],
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" }
      }
    },
    {
      "id": 7,
      "type": "stat",
      "title": "Resume Validated Bytes",
      "description": "Last reported bytes validated during resume checksum verification.",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 24 },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 0 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        { "refId": "A", "expr": "snapshot_resume_validated_bytes" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal"
      }
    },
    {
      "id": 8,
      "type": "stat",
      "title": "Resume Progress Ratio",
      "description": "Fraction of the snapshot plan validated when the last resume completed.",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 24 },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 0.1 },
              { "color": "green", "value": 0.25 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        { "refId": "A", "expr": "snapshot_resume_progress_ratio" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal"
      }
    },
    {
      "id": 9,
      "type": "stat",
      "title": "Resume Checksum State",
      "description": "Current checksum verdict reported by the latest resume response.",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 24 },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 0.5 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        { "refId": "A", "expr": "snapshot_resume_checksum_state{state=\"mismatch\"}" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal"
      }
    }
  ]
}
