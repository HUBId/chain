{
  "title": "Snapshot Resilience",
  "uid": "snapshot-resilience",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "1m",
  "timezone": "browser",
  "time": {
    "from": "now-14d",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Chaos Runs (7d)",
      "description": "Number of snapshot chaos drills executed over the last 7 days.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "increase(snapshot_chaos_runs_total[7d])",
          "format": "time_series"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal"
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Chaos Failures (7d)",
      "description": "Snapshot chaos drills that breached resume or retry thresholds over the last 7 days.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "increase(snapshot_chaos_failures_total[7d])",
          "format": "time_series"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal"
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Chaos Run Trend",
      "description": "Daily execution volume for snapshot chaos drills.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 6 },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "custom": {
            "drawStyle": "line",
            "showPoints": "auto"
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "increase(snapshot_chaos_runs_total[1d])",
          "legendFormat": "Runs/24h"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Chaos Failure Trend",
      "description": "Daily failure counts for snapshot chaos drills.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 6 },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "custom": {
            "drawStyle": "line",
            "showPoints": "auto"
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "increase(snapshot_chaos_failures_total[1d])",
          "legendFormat": "Failures/24h"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      }
    }
  ]
}
