{
  "title": "Uptime & Finality Correlation",
  "uid": "uptime-finality-correlation",
  "schemaVersion": 39,
  "version": 2,
  "refresh": "30s",
  "timezone": "browser",
  "time": {
    "from": "now-12h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "environment",
        "label": "Environment",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "refresh": 2,
        "definition": "label_values(up, environment)",
        "query": {
          "query": "label_values(up, environment)",
          "refId": "PromVar"
        },
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "current": {
          "selected": true,
          "text": "All",
          "value": [
            "$__all"
          ]
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Restart Signals",
      "description": "Tracks process start time changes and scrape uptime drops to highlight restarts that may precede finality regressions.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (environment) (changes(process_start_time_seconds{environment=~\"$environment\"}[5m]))",
          "legendFormat": "{{environment}} restarts"
        },
        {
          "refId": "B",
          "expr": "sum by (environment) (1 - up{job=~\"rpp-node|node\", environment=~\"$environment\"})",
          "legendFormat": "{{environment}} scrape downtime"
        }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Finality Lag & Height Gap",
      "description": "Correlates restart windows with finality lag (slots) and finalized height gap to show post-restart recovery.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 8
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "max_over_time(finality_lag_slots{environment=~\"$environment\"}[5m])",
          "legendFormat": "{{environment}} finality lag (slots)"
        },
        {
          "refId": "B",
          "expr": "max_over_time(finalized_height_gap{environment=~\"$environment\"}[5m])",
          "legendFormat": "{{environment}} finalized height gap"
        }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Block Progress During Recovery",
      "description": "Shows block production rate during restart windows to confirm chain height continues advancing while finality catches up.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 16
      },
      "fieldConfig": {
        "defaults": {
          "unit": "blocks/min",
          "min": 0
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "increase(chain_block_height{environment=~\"$environment\"}[5m]) / 5",
          "legendFormat": "{{environment}} block rate"
        },
        {
          "refId": "B",
          "expr": "consensus:block_height_delta:5m{environment=~\"$environment\"} / 5",
          "legendFormat": "{{environment}} recorded block delta"
        }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "RPC Availability",
      "description": "Tracks RPC success ratio so operators can distinguish API outages from consensus stalls.",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 24
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "rpc:availability_ratio:5m{environment=~\"$environment\"}",
          "legendFormat": "{{environment}} RPC success ratio"
        }
      ]
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "description": "Overlays finality lag with prover queue depth to highlight backlog-induced finality regressions.",
      "fieldConfig": {
        "defaults": {
          "min": 0
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 32
      },
      "id": 5,
      "targets": [
        {
          "expr": "max_over_time(finality_lag_slots{environment=~\"$environment\"}[5m])",
          "legendFormat": "{{environment}} finality lag (slots)",
          "refId": "A"
        },
        {
          "expr": "wallet:prover_queue_depth:max:10m{environment=~\"$environment\"}",
          "legendFormat": "{{environment}} {{backend}} {{circuit}} prover queue",
          "refId": "B"
        }
      ],
      "title": "Finality Lag & Prover Queue Depth",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "description": "Correlates uptime observation age with prover latency so operators can verify backlogged provers are delaying reputation accrual.",
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "unit": "s"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 40
      },
      "id": 6,
      "targets": [
        {
          "expr": "max_over_time(uptime_observation_age_seconds{environment=~\"$environment\"}[5m])",
          "legendFormat": "{{environment}} uptime observation age",
          "refId": "A"
        },
        {
          "expr": "wallet:prover_job_latency:p95_seconds:10m{environment=~\"$environment\"}",
          "legendFormat": "{{environment}} {{backend}} prover p95 latency",
          "refId": "B"
        }
      ],
      "title": "Uptime Observation Gap & Prover Latency",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "description": "Tracks prover queue wait-time percentiles by backend and circuit so operators can spot tail regressions.",
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "unit": "s"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 48
      },
      "id": 7,
      "targets": [
        {
          "expr": "wallet:prover_queue_latency:p50_seconds:10m{environment=~\"$environment\"}",
          "legendFormat": "{{environment}} {{backend}} {{circuit}} p50",
          "refId": "A"
        },
        {
          "expr": "wallet:prover_queue_latency:p95_seconds:10m{environment=~\"$environment\"}",
          "legendFormat": "{{environment}} {{backend}} {{circuit}} p95",
          "refId": "B"
        },
        {
          "expr": "wallet:prover_queue_latency:p99_seconds:10m{environment=~\"$environment\"}",
          "legendFormat": "{{environment}} {{backend}} {{circuit}} p99",
          "refId": "C"
        }
      ],
      "title": "Prover Queue Latency by Circuit",
      "type": "timeseries"
    }
  ]
}