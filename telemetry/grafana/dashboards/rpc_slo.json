{
  "title": "RPC SLOs",
  "description": "Endpoint-level availability and latency for critical RPC surfaces including health, proofs, and wallet submission.",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Critical endpoint success ratio (5m)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum by (method) (rate(rpp_runtime_rpc_request_total{method=~\"node_health_ready|node_submit_transaction|block_proof\",result=\"success\"}[$__rate_interval])) / clamp_min(sum by (method) (rate(rpp_runtime_rpc_request_total{method=~\"node_health_ready|node_submit_transaction|block_proof\"}[$__rate_interval])), 0.0001)",
          "legendFormat": "{{method}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.99 },
              { "color": "red", "value": 0.95 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 9, "w": 24, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "p95 latency for critical endpoints",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, method) (rate(rpp_runtime_rpc_request_latency_bucket{method=~\"node_health_ready|node_submit_transaction|block_proof\",result=\"success\"}[$__rate_interval])))",
          "legendFormat": "{{method}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 500 },
              { "color": "red", "value": 1000 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 9, "w": 24, "x": 0, "y": 9 }
    }
  ],
  "time": {
    "from": "now-6h",
    "to": "now"
  }
}
